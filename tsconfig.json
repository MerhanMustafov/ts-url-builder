{
     "compilerOptions": {
          "target": "es2016",
          "module": "NodeNext",
          "moduleResolution": "nodenext",
          "allowJs": true,
          "declaration": true,
          "sourceMap": true,
          "outDir": "lib",
          "esModuleInterop": true,
          "forceConsistentCasingInFileNames": true,

          "strict": true,
          "noImplicitAny": true,
          "strictNullChecks": true,
          "skipLibCheck": true
     },
     "include": ["src/**/*"],
     "exclude": ["node_modules", "lib/**/*", "src/__t"]
}
